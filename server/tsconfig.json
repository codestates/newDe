{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],
    "module" : "CommonJS",
    "target" : "ES6",
    "outDir" : "dist",
    "sourceMap" : true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include" : ["src/**/*"],
  "exclude" : ["node_modules"]
}
